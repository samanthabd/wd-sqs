
<!-- item loop -->
{.repeated section items}

  <article id="post-{id}" class="blog-list-item {@|item-classes}" data-item-id="{id}">
    <!-- main image (thumbnail) -->
    {.if coachPicture}
        <img {coachPicture|image-meta} />
    {.end}
    <!-- post title -->
    <h2 class="title" data-content-field="coachName">
       {coachName}
    </h2>
    <!-- excerpt or body -->
    {.if coachDescription}
      {coachDescription}
    {.end}
  </article>

{.or}

  <!-- no items means no blog posts -->
  <p><em>No coaches yet.</em></p>

{.end}
