
{.section item}

  <!--WRAPPER-->
  <article id="post-{id}" class="blog-list-item {@|item-classes}" data-item-id="{id}">
    <!-- main image (thumbnail) -->
    {.if customContent.coachPicture}
        <img {customContent.coachPicture|image-meta} />
    {.end}
    <!-- post title -->
    <h2 class="title" data-content-field="coachName">
       {customContent.coachName}
    </h2>
    <!-- excerpt or body -->
    {.if customContent.coachDescription}
      {customContent.coachDescription}
    {.end}
  </article>

{.end}

